@model PagedList.IPagedList<BikeJourneyHelperApplication.Models.BikeRepairShop>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Repair shops";
}

<div class="container">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

    @using (Html.BeginForm("Index", "BikeRepairShops", FormMethod.Get))
    {
        <p>
            Find repair shop by name: @Html.TextBox("SearchShop", ViewBag.CurrentFilter as string)
            <input type="submit" value="Search" />
        </p>
    }

    <table class="table">
        <tr>
            <th>
                Bike Repair Shop ID
            </th>
            <th>
                @Html.ActionLink("Repair Shop name", "Index", new { order = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                Address
            </th>
            <th>
                Number
            </th>
            <th>
                Opening Hours
            </th>
            <th>
                latitude
            </th>
            <th>
                longitude
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BikeRepairShopID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShopName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OpeningHours)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lng)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.BikeRepairShopID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.BikeRepairShopID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.BikeRepairShopID })
                </td>
            </tr>
        }

    </table>
    <br />
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
</div>
<section class="bg-primary">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 text-center">
                <h2 class="section-heading"><h2 class="section-heading __browserLink_selected_design" style="color: rgb(255, 255, 255);">Search for your favourite bike repair shops</h2></h2>
                <hr class="light">
                <p class="text-faded">To get directions and estimated journey time, just enter the bike repair shop ID from the list above in the space provided below, and hit the Get directions but to get your directions!</p>

            </div>

            <div class="col-lg-4 col-lg-offset-4">

                <input type="text" id="repairshopid" placeholder="Enter Repair Shop ID" class="searchBox" />


            </div>

            <div class="col-lg-8 col-lg-offset-2 text-center">
                <hr class="light">
                <a href="#map_section" id="getdirection_btn" onclick="GetSearchedShopLocation();" class="page-scroll btn btn-default btn-xl sr-button">Get Directions</a>
            </div>

        </div>
    </div>
</section>
<section id="map_section">


    <div class="row">
        <div class="col-lg-12">

            <div id="map_canvas"> </div>

        </div>


    </div>


    <div class="container">

        <div class="row">

            <div class="col-lg-12">

                <div id="right-panel"> </div>

            </div>

        </div>

    </div>





</section>




